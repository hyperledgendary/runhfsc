 {
    "compilerOptions": {
      "declaration": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "esnext",
        "es2017.object" 
      ],
      "target": "es2015",
      "outDir": "./lib",
      "removeComments": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*-spec.ts"
    ]
  }